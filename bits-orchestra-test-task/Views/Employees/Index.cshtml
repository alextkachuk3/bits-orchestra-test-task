@{
    ViewData["Title"] = "Home Page";

    List<Employee> employees = Model;
}

<div class="text-center row">
    @if (employees.Count == 0)
    {
        <p>There are no employees in the database.</p>
    }
    else
    {
        <div class="panel">
            <table class="table table-striped table-hover">
                <thead>
                    <tr>
                        <th class="col-1"></th>
                        <th class="col-2">Name</th>
                        <th class="col-2">Date of birth</th>
                        <th class="col-1">Married</th>
                        <th class="col-2">Phone</th>
                        <th class="col-2">Salary</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var employee in employees)
                    {
                        <tr class="paginate-show">
                            <td class="col-1">
                                <input name="filesIds" class="form-check-input" type="checkbox" value="@employee.Id" id="vacancyIdInput- + @employee.Id">
                            </td> 
                            <td class="col-2">
                                @employee.Name
                            </td>
                            <td class="col-2">
                                @employee.DateOfBirth
                            </td>
                            <td class="col-2">
                                @employee.IsMarried
                            </td>
                            <td class="col-2">
                                @employee.Phone
                            </td>
                            <td class="col-2">
                                @employee.Salary
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
</div>
